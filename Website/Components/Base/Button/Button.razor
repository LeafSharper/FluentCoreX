<button class="@CssCls">Secondary</button>

@code {

    [Parameter]
    public ButtonVariant Variant { get; set; } = ButtonVariant.Secondary;

    [Parameter]
    public ButtonSize Size { get; set; } = ButtonSize.Medium;

    public string ButtonBaseCls = "ease-in-out duration-100 transition-colors font-medium font-noto cursor-pointer";

    public string AccessibilityCls = "";

    public string VariantCls => Variant switch
    {
        ButtonVariant.Primary => "",
        ButtonVariant.Outline => "",
        _ => "bg-white hover:bg-gray-50 active:bg-gray-100 border border-gray-400 rounded-md" // Secondary
    };

    public string SizeCls => Size switch
    {
        ButtonSize.Small => "",
        ButtonSize.Large => "",
        _ => "text-sm px-4 py-2" // Medium
    };

    public string CssCls => string.Join(" ", new[] { ButtonBaseCls, SizeCls, VariantCls });

    public enum ButtonVariant
    {
        Primary,
        Secondary,
        Outline
    }

    public enum ButtonSize
    {
        Small,
        Medium,
        Large,
    }
}
